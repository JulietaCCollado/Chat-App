<h1 class="text-2xl font-bold mb-6">Create a New Chat Room</h1>

<%= form_with model: @chat_room, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :name, "Chat Room Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full p-2 border border-gray-300 rounded bg-white shadow-sm focus:outline-none focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Create", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>

