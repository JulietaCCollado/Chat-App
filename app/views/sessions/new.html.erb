<h1 class="text-3xl font-bold mb-6">Sign Up</h1>

<%= form_with model: @user, url: signup_path, local: false do |form| %>
  <div class="mb-4">
    <%= form.label :display_name, class: "block mb-1" %>
    <%= form.text_field :display_name, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block mb-1" %>
    <%= form.email_field :email, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block mb-1" %>
    <%= form.password_field :password, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-6">
    <%= form.label :password_confirmation, class: "block mb-1" %>
    <%= form.password_field :password_confirmation, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= form.submit "Sign Up", class: "bg-green-600 text-white px-4 py-2 rounded" %>
  </div>
<% end %>

<p class="mt-4">
  Already have an account? 
  <%= link_to "Log In", login_path, class: "text-blue-600 underline" %>
</p>
