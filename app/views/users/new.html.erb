<h1 class="font-bold text-4xl mb-4">Sign Up</h1>

<%= form_with model: @user, url: signup_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <div class="mb-4 text-red-600">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :email %><br>
    <%= form.email_field :email, class: "border p-2 rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :display_name %><br>
    <%= form.text_field :display_name, class: "border p-2 rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "border p-2 rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, class: "border p-2 rounded w-full" %>
  </div>

  <%= form.submit "Sign Up", class: "bg-blue-500 text-white py-2 px-4 rounded" %>
<% end %>
